@model ArticleUpdateModel
@{
    ViewBag.Title = "Makale Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<form asp-action="UpdateArticle" method="post" class=" p-3" enctype="multipart/form-data">

    <input type="hidden" asp-for="@Model.ArticleId" />
    <div class="form-group">
        <label asp-for="ArticleName"></label>
        <input asp-for="ArticleName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ArticleContent"></label>
        <textarea asp-for="ArticleContent" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Image"></label>
        <input asp-for="Image" class="form-control-file" type="file" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-info btn-block">Güncelle</button>
    </div>
</form>




<link rel="stylesheet" href="/node_modules/trumbowyg/dist/ui/trumbowyg.css">

<script src="/node_modules/trumbowyg/dist/trumbowyg.js"></script>



<script>
    $("#ArticleContent").trumbowyg();
</script>