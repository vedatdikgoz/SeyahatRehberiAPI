<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="/customcss/css/simple-sidebar.css" rel="stylesheet" />
    <link href="/customcss/superhero/bootstrap.min.css" rel="stylesheet">
    <link href="/node_modules/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <script src="/customcss/vendor/jquery/jquery.min.js"></script>
    <script src="/customcss/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <script src="/node_modules/jquery-validation/dist/jquery.validate.js"></script>
    <script src="/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>

</head>

<body>

    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading">Yönetim Paneli </div>
            <div class="list-group list-group-flush">
                <a asp-controller="Admin" asp-action="AddArticle" class="list-group-item list-group-item-action bg-light">Makale Ekle</a>
                <a asp-controller="Admin" asp-action="" class="list-group-item list-group-item-action bg-light">Makaleler</a>
                <a asp-controller="Admin" asp-action="" class="list-group-item list-group-item-action bg-light">Şehirler</a>
                <a asp-controller="Admin" asp-action="" class="list-group-item list-group-item-action bg-light">Kullanıcılar</a>
                <a asp-controller="Admin" asp-action="" class="list-group-item list-group-item-action bg-light">Roller</a>
                <a asp-controller="Admin" asp-action="" class="list-group-item list-group-item-action bg-light">Faturalar</a>
                <a asp-controller="Admin" asp-action="" class="list-group-item list-group-item-action bg-light">Kargolar</a>
                <a asp-controller="Admin" asp-action="" class="list-group-item list-group-item-action bg-light">Ajanda</a>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-dark bg-primary border-bottom">
                <button class="btn btn-primary" id="menu-toggle">Menü</button>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Anasayfa</a>
                        </li>
                    </ul>
                </div>
            </nav>
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>


    </div>


    <script>$("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });</script>

</body>

</html>

